<div class="container">
  <div class="row">
    <div class="col-12 d-flex align-items-center justify-content-center">
      <h1><%= @product.reference %></h1>
    </div>
    <div class="col-6 d-flex align-items-center justify-content-center">
      <%# <h4>Catalogue :</h4> %>
      <h3><%= @product.catalogue %></h3>
    </div>
    <div class="col-6 d-flex align-items-center justify-content-center">
      <%# <h4>Gamme :</h4> %>
      <h3><%= @product.gamme %></h3>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-center">
      <%# <h4>Description :</h4><br> %>
      <p><%= @product.description %></p>
    </div>
    <div class="col d-flex align-items-center justify-content-center">
      <h4>Contenu :</h4>
      <p><%= @product.contenu %><%= @product.contenu_unit %></p>
    </div>
    <div class="col d-flex align-items-center justify-content-center">
      <h4>EAN :</h4>
      <p><%= @product.ean %></p>
    </div>
    <div class="col d-flex align-items-center justify-content-center">
      <h4>Conditionnement :</h4>
      <p>Carton de <%= @product.cdt %> pièces</p>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-center">
      <h4>Prix public :</h4>
      <p><%= @product.public_price %> €/<%= @product.unit_price %></p>
    </div>
    <a><%= link_to 'Back to products list', products_path, class: "btn btn-info rounded-4" %></a>
  </div>
</div>
